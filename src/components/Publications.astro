---
// Component for the Publications section
const publications = [
  {
    title: "Retrieval-Augmented Conversational Recommendation with Prompt-based Semi-Structured Natural Language State Tracking",
    authors: "S Kemper*, <strong class=\"highlight-author\">J Cui</strong>*, K Dicarlantonio*, K Lin*, D Tang*, A Korikov, S Sanner",
    venue: "Proceedings of the 47th International ACM SIGIR Conference on Research and ...",
    year: "2024",
    link: "https://dl.acm.org/doi/abs/10.1145/3626772.3657670", // Placeholder for the actual link to the paper
    // citedBy: "15", // Removed
    // citationLink: "#" // Removed
  },
  {
    title: "Comparing Defensive Pressures Using Possession Retention Probability and Expected Goals",
    authors: "JW David Awosoga, <strong class=\"highlight-author\">Justin Cui</strong>, Aujin Li, Jaden Majumdar",
    venue: "2023 LinkÃ¶ping Hockey Analytics Conference",
    year: "2023",
    link: "https://www.ida.liu.se/research/sportsanalytics/LINHAC/LINHAC23/papers/paper-students-Waterloo-Toronto.pdf", // Placeholder
    // citedBy: null, // Removed
    // citationLink: "#" // Removed
  },
  // Add more publications here, following the same structure
];
const hasEqualContribution = publications.some(pub => pub.authors.includes('*'));
---

<div class="publications-content">
  <!-- Section title now handled by parent -->
  <div class="publication-list">
    {publications.map(pub => (
      <div class="publication-item">
        <div class="publication-main">
          <h3><a href={pub.link} target="_blank" rel="noopener noreferrer">{pub.title}</a></h3>
          <p class="authors" set:html={pub.authors}></p>
          <p class="venue">{pub.venue} {pub.year && <span class="year">({pub.year})</span>}</p>
        </div>
        {/* Citation info div removed */}
      </div>
    ))}
  </div>
  {hasEqualContribution && (
    <p class="equal-contribution-note">* Denotes equal contribution.</p>
  )}
</div>

<style>
  .publication-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem; /* Spacing between items */
  }

  .publication-item {
    display: flex; /* Enable flex for main content and citation info */
    justify-content: space-between; /* Push citation to the right */
    align-items: flex-start; /* Align items to the top */
    padding: 0.75rem 0; /* Vertical padding, no horizontal padding here */
    border-bottom: 1px solid var(--gray-light); /* Separator line */
  }
  .publication-item:last-of-type {
    border-bottom: none;
  }

  .publication-main {
    flex-grow: 1;
    padding-right: 1rem; /* Space before citation count */
  }

  .publication-item h3 {
    margin-top: 0;
    margin-bottom: 0.2rem;
    font-size: 1rem; 
    font-weight: 600;
  }
  .publication-item h3 a {
    color: var(--text-color);
    text-decoration: none;
  }
  .publication-item h3 a:hover {
    text-decoration: underline; 
  }

  .publication-item .authors {
    margin-bottom: 0.2rem;
    font-size: 0.85rem; 
    color: var(--gray-dark);
    line-height: 1.4;
  }

  .publication-item .venue {
    font-size: 0.85rem; 
    color: var(--gray-dark);
    line-height: 1.4;
  }
  .publication-item .year {
    /* font-style: italic; */
  }

  .highlight-author {
    font-weight: 600; /* Or bold, depending on desired emphasis */
    color: var(--text-color); /* Make highlighted name stand out a bit more */
  }

  .equal-contribution-note {
    font-size: 0.8rem;
    color: var(--gray-dark);
    margin-top: 1rem;
    text-align: left;
  }
</style> 