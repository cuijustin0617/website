// Build absolute asset URLs using Astro's BASE_URL (works in dev + Pages)
const getImageUrl = (imageName) => {
  const base = import.meta.env.BASE_URL || '/';
  return base.endsWith('/') ? `${base}${imageName}` : `${base}/${imageName}`;
};
