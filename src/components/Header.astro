---

<header class="container site-header">
  <div class="header-top-row">
    <div class="profile-pic-header">
      <img src={profilePicSrc} alt="Justin Cui" />
    </div>
    <div class="header-main-text">
      <h1 class="site-name">{personalName}</h1>
      <p class="location-info">{location}</p> 
    </div>
  </div>
  <nav class="main-nav">
    <ul>
      {navLinks.map(link => <li><a href={link.href}>{link.text}</a></li>)}
    </ul>
  </nav>
  <div class="social-links-container">
    {socialLinks.map(link => <a href={link.href} title={link.text} target="_blank" rel="noopener noreferrer" set:html={link.icon}><span class="sr-only">{link.text}</span></a>)}
  </div>
</header>

<style>
  .site-header {
    padding-top: 2rem; /* Adjusted padding */
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--gray-light);
    margin-bottom: 2rem;
    text-align: left; /* Align header content to left */
  }
  .header-top-row {
    display: flex;
    align-items: center; /* Vertically align pic and text block */
    gap: 1rem; /* Space between picture and text */
    margin-bottom: 0.75rem; /* Space before nav */
  }
  .profile-pic-header {
    width: 60px; /* Adjust size as needed */
    height: 60px;
    border-radius: 50%;
    overflow: hidden; /* Ensure image stays circular */
    flex-shrink: 0; /* Prevent shrinking */
  }
  .profile-pic-header img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Crop image to fit circle */
  }
  .header-main-text {
    /* flex-grow: 1; /* Allow text to take remaining space */
  }
  .site-name {
    font-size: 1.8rem; /* Adjusted for potentially less space */
    font-weight: 700; /* Bolder */
    margin: 0 0 0.1rem 0; /* Adjusted margin */
    color: var(--black);
  }
  .location-info {
    font-size: 0.85rem; /* Adjusted size */
    color: var(--gray-dark);
    margin: 0;
  }
  .main-nav ul {
    list-style: none;
    padding: 0;
    margin: 0 0 0.75rem 0; /* Margin below nav */
    display: flex;
    flex-wrap: wrap; /* Allow nav links to wrap */
    gap: 0.5rem 1.2rem; /* Row and column gap */
  }
  .main-nav a {
    font-size: 0.9rem; /* Slightly smaller nav links */
    font-weight: 500;
    color: var(--text-color); /* Use default text color */
    text-decoration: none;
    padding: 0.25rem 0; /* Add some padding for touch targets / visual spacing */
  }
  .main-nav a:hover {
    color: var(--text-color); /* Keep same color on hover, no underline */
    /* text-decoration: underline; /* Optional: if underline on hover is desired for nav */
  }
  .social-links-container {
    display: flex;
    gap: 0.75rem;
    align-items: center; /* Align icons nicely if they have different heights */
  }
  .social-links-container a {
    color: var(--gray-dark); /* Social icons color */
    display: inline-block; /* For better icon rendering */
  }
  .social-links-container a:hover {
    color: var(--black); /* Darker on hover */
  }
  .social-links-container a svg {
    vertical-align: middle;
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style> 
